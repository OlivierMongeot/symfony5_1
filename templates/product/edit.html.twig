{% extends "base.html.twig" %}

{% block title %}
    Edition de {{ product.name }}
{% endblock %}

{% block body %}

    <h1>Edition de {{ product.name }}</h1>
    {% form_theme formView 'form/my_form.html.twig' %}
	
        {{ form_start(formView, {'attr':{'novalidate':'novalidate' }}
        )}}

	
    {{ form_errors(formView) }}

	<div class="row">
		<div class="col-md-6">
			{{ form_row(formView.name, {'attr': {'placeholder': 'Entrez le nom de l\'article'}}) }}
			{{ form_row(formView.price)}}
            {{ form_row(formView.mainPicture, {'attr': {'placeholder': 'Entrez l\'URL de l\'image'}})}}
		</div>
		<div class="col-md-6">

			{{ form_row(formView.shortDecription)}}
			{{ form_row(formView.category)}}

			<button typr="submit" class="btn btn-success mt-3">
				<i class="fas fa-save"></i>
				Modifier le produit
			</button>
		</div>
	</div>

	{{ form_end(formView) }}
{% endblock %}

