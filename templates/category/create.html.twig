{% extends 'base.html.twig' %}

{% block title %}
	Création nouvelle catégorie
{% endblock %}

{% block body %}
	<h1>Nouvelle catégorie</h1>

{{ form_start(formView) }}
{{ form_errors(formView) }}
{# {{ form_widget(formView) }} #}
<div class="row">
	<div class="container">
		{{ form_row(formView.name, 
            {'attr': {'placeholder': 'Entrez le nom de la catégorie'}})}}

		<button type="submit" class="btn btn-success mt-3">
			<i class="fas fa-save"></i>
			Créer la catégorie
		</button>
	</div>
</div>

{{ form_end(formView) }}

{% endblock %}